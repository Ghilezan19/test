{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Lintora: Review Staged Files",
      "type": "shell",
      "command": "node",
      "args": ["${workspaceFolder}/scripts/pre-commit-review.js"],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "Lintora: Install Pre-commit Hook",
      "type": "shell",
      "command": "node",
      "args": ["${workspaceFolder}/scripts/install-hooks.js"],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "Lintora: Uninstall Pre-commit Hook",
      "type": "shell",
      "command": "node",
      "args": ["${workspaceFolder}/scripts/install-hooks.js", "uninstall"],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "Lintora: Start Backend",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "isBackground": true
    },
    {
      "label": "Lintora: Start Frontend",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "isBackground": true
    },
    {
      "label": "Lintora: Start All",
      "dependsOn": ["Lintora: Start Backend", "Lintora: Start Frontend"],
      "problemMatcher": []
    }
  ]
}

